<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_resto_description">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoName"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoLocation"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoCoords"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_namaResto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder Resto"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_lokasiResto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder lokasi"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_koordinatResto"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder koordinat"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>